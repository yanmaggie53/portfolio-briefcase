     body { font: 16px verdana; }
     /* the board does weird resizing during clicks if the width is a percentage,
    so I'm setting the width to a pixel value, but limited by page width.
    */
     #board {
     display: inline-block;
     width: 616px;
     max-width: 90%;
     border: 2px solid black;
     background-color: gray;
     margin: 10px;
     padding: 10px;
     }

     /* 25% gives us rows of four images. use border-box so that padding and
    border are included in the 25% width. 4*(150+4)=616px */
     #board img {
     box-sizing: border-box;
     width: 25%;
     padding: 2px;
     }

     #controls {
     display: inline-block;
     width: 300px;
     vertical-align: top;
     }

     /* make the messages stand out */
     #msg {color: red}

     button {
     font: 20px verdana;
     padding: 0.5ex 1em;
     border: 1px solid black;
     border-radius: 0.5ex;
     }
   </style>
</head>

